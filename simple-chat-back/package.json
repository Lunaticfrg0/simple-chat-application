{
    "name": "simple-chat-back",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start": "node ./src/index.js",
        "lint": "eslint --ext .js .",
        "dev": "env-cmd -f ./config/dev.env nodemon ./src/index.js",
        "audit": "audit-ci --high",
        "test": "env-cmd -f ./config/test.env jest --runInBand --testTimeout=7000",
        "coverage": "npm test -- --coverage --watchAll=false"
    },
    "jest": {
        "testEnvironment": "node"
      },
    "dependencies": {
        "audit-ci": "^3.1.1",
        "debug": "^2.6.9",
        "env-cmd": "^10.1.0",
        "express": "^4.16.4",
        "mongoose": "^5.11.8",
        "morgan": "^1.9.1",
        "supertest": "^6.0.1"
    },
    "devDependencies": {
        "eslint": "^7.16.0",
        "eslint-config-recommended": "^4.1.0",
        "eslint-plugin-import": "^2.22.1",
        "jest": "^26.6.3",
        "nodemon": "^2.0.6"
    },
    "eslintConfig": {
        "extends": "recommended/node",
        "env": {
            "es6": true,
            "browser": false,
            "jest": true
        },
        "rules": {
            "brace-style": [
                "error",
                "stroustrup"
            ],
            "comma-dangle": [
                "error",
                "never"
            ],
            "no-unused-vars": [
                "warn"
            ],
            "no-var": [
                "off"
            ],
            "one-var": [
                "off"
            ],
            "import/no-commonjs": [
                "off"
            ]
        }
    }
}
